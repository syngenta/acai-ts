{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": ".build",
      "rootDir": "src",
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "openapi.yaml"],
    "exclude": ["node_modules", ".build", ".serverless"]
  }