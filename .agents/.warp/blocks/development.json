      "commands": [
        "echo 'ğŸ“¦ Preparing package for publication...'",
        "echo 'ğŸ§¹ Clean build:'",
        "npm run clean && npm run build",
        "echo 'ğŸ§ª Final test run:'",
        "npm test",
        "echo 'ğŸ“‹ Package contents preview:'",
        "npm pack --dry-run",
        "echo 'ğŸ“Š Package size check:'",
        "npm run build && tar -czf temp.tgz dist/ && ls -lh temp.tgz && rm temp.tgz",
        "echo 'âœ… Package ready for publishing!'",
        "echo 'ğŸ’¡ Next: npm publish (if ready)'"
